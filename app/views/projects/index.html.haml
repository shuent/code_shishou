%p#search-result-number #{ @projects.length } hits
= link_to 'Create Project', new_project_path if policy(:project).new?
.h-projects Projects
.projects
  - @projects.each do |project|
    .project-summary
      %h2.title=link_to project.title, project
      %p.body=project.body
      .user
        .logo
        .name=project.owner.email
